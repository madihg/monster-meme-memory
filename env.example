# Monster Meme Memory - Environment Variables
# Copy this file to .env and fill in your values

# OpenAI API Key (required for Mem0)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Anthropic API Key (alternative to OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Database Configuration
# DATABASE_URL=sqlite:///memories.db

# Optional: Server Configuration
PORT=5000
DEBUG=False

# Optional: Mem0 Configuration
# MEM0_CONFIG_FILE=mem0_config.json
